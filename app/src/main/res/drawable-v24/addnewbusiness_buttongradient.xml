<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape >
            <gradient
                android:startColor="#EDEDED"
                android:endColor="#406AD0FF"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="@color/white" />
            <corners
                android:left="2dp"
                android:right="2dp"
                android:top="1dp"
                android:radius="5dp" />
            <padding

                android:bottom="3dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">

        </shape>
    </item>
    <item android:top="0dp">
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#FFFFFF"
                android:angle="270"/>

            <corners
                android:radius="5dp"  />
        </shape>
    </item>
</layer-list>