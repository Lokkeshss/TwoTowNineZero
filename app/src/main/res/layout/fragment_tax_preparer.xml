<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dashboard.bottomnavigation.profile.TaxPreparerFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/common_header_loginsignup" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/loginsignup_headerlogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/taxPayerfragmentBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/fragmentbackarrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_weight="1"
            android:background="@color/loginheadercolor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/loginCardView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">
                    <TextView
                        android:id="@+id/test"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Add New Filing"
                        android:textColor="@color/black"
                        android:textSize="@dimen/page_topheading_textsize"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/blacklignt">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/irsPaymentOptionEFWMain"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/blacklignt">
                                <LinearLayout
                                    android:padding="@dimen/dp_10"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:drawableStart="@drawable/taxprepayerinformation"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textSize="@dimen/page_maintitle_textsize"
                                        android:textColor="@color/textcolor"
                                        android:layout_marginTop="@dimen/dp_10"
                                        android:layout_marginBottom="@dimen/dp_10"
                                        android:text="Tax Preparer Information"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>


                            <LinearLayout
                                android:visibility="visible"
                                android:id="@+id/irsPaymentOptionEFWChild"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/sp_10"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/page_title_textsize"
                                    android:text="Tax Preparer Information"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/taxPayerYesOrNo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <LinearLayout
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:background="@drawable/textview_lightgrey_roundcornor"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <RadioGroup
                                        android:id="@+id/taxPayerRG"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <RadioButton
                                            android:checked="true"
                                            android:id="@+id/taxPayerIndividual"
                                            android:textSize="@dimen/page_title_textsize"
                                            android:text="Individual Tax Preparer"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"/>
                                        <!--FIRM-->
                                        <!--SELFEMPLOYED-->
                                        <RadioButton
                                            android:id="@+id/taxPayerFirm"
                                            android:textSize="@dimen/page_title_textsize"
                                            android:text="Firm Tax Preparer"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"/>
                                    </RadioGroup>
                                </LinearLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_20"
                                    style="@style/loginTextInputLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Personal Name"
                                    app:hintTextColor="@color/lightGray">

                                    <EditText
                                        android:id="@+id/taxPayerPersonalName"
                                        android:textAllCaps="true"
                                        android:fontFamily="@font/roboto_regular"
                                        style="@style/loginTextInputEditText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890. "
                                        android:inputType="text"
                                        android:text="" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_20"
                                    style="@style/loginTextInputLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Email"
                                    app:hintTextColor="@color/lightGray">

                                    <EditText
                                        android:id="@+id/taxPayerEmail"
                                        android:fontFamily="@font/roboto_regular"
                                        style="@style/loginTextInputEditText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textEmailAddress"
                                        android:text="" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_20"
                                    style="@style/loginTextInputLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Phone Number"
                                    app:hintTextColor="@color/lightGray">

                                    <EditText
                                        android:id="@+id/taxPayerPhoneNumber"
                                        android:fontFamily="@font/roboto_regular"
                                        style="@style/loginTextInputEditText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:digits="1234567890-+"
                                        android:inputType="phone"
                                        android:text="" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_20"
                                    style="@style/loginTextInputLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="PTIN Eg : P12345678"
                                    app:hintTextColor="@color/lightGray">

                                    <EditText
                                        android:id="@+id/taxPayerPTIN"
                                        android:fontFamily="@font/roboto_regular"
                                        style="@style/loginTextInputEditText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:maxLength="9"
                                        android:text="" />
                                </com.google.android.material.textfield.TextInputLayout>


                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/taxPayerFirmNameTI"
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_20"
                                    style="@style/loginTextInputLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Firm Name"
                                    app:hintTextColor="@color/lightGray">

                                    <EditText
                                        android:id="@+id/taxPayerFirmName"
                                        android:fontFamily="@font/roboto_regular"
                                        style="@style/loginTextInputEditText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="text"
                                        android:text="" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/taxPayerEINTI"
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_20"
                                    style="@style/loginTextInputLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="EIN"
                                    app:hintTextColor="@color/lightGray">

                                    <EditText
                                        android:id="@+id/taxPayerEIN"
                                        android:fontFamily="@font/roboto_regular"
                                        style="@style/loginTextInputEditText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="text"
                                        android:text="" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_20"
                                    style="@style/loginTextInputLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Address Line 1"
                                    app:hintTextColor="@color/lightGray">

                                    <EditText
                                        android:id="@+id/taxPayerAddress1"
                                        android:fontFamily="@font/roboto_regular"
                                        style="@style/loginTextInputEditText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="text"
                                        android:text="" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_20"
                                    style="@style/loginTextInputLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Address Line 2"
                                    app:hintTextColor="@color/lightGray">

                                    <EditText
                                        android:id="@+id/taxPayerAddress2"
                                        android:fontFamily="@font/roboto_regular"
                                        style="@style/loginTextInputEditText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="text"
                                        android:text="" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_20"
                                    style="@style/loginTextInputLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Country"
                                    app:hintTextColor="@color/lightGray">

                                    <EditText
                                        android:id="@+id/taxPayerCountry"
                                        android:fontFamily="@font/roboto_regular"
                                        style="@style/loginTextInputEditText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="text"
                                        android:text="" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_20"
                                    style="@style/loginTextInputLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="State"
                                    app:hintTextColor="@color/lightGray">

                                    <EditText
                                        android:id="@+id/taxPayerState"
                                        android:fontFamily="@font/roboto_regular"
                                        style="@style/loginTextInputEditText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="text"
                                        android:text="" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_20"
                                    style="@style/loginTextInputLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="City"
                                    app:hintTextColor="@color/lightGray">

                                    <EditText
                                        android:id="@+id/taxPayerCity"
                                        android:fontFamily="@font/roboto_regular"
                                        style="@style/loginTextInputEditText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="text"
                                        android:text="" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_20"
                                    android:layout_marginBottom="@dimen/dp_20"
                                    style="@style/loginTextInputLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Zip Code"
                                    app:hintTextColor="@color/lightGray">

                                    <EditText
                                        android:id="@+id/taxPayerZipCode"
                                        android:fontFamily="@font/roboto_regular"
                                        style="@style/loginTextInputEditText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="phone"
                                        android:maxLength="10"
                                        android:text="" />
                                </com.google.android.material.textfield.TextInputLayout>


                            </LinearLayout>


                        </LinearLayout>



                    </com.google.android.material.card.MaterialCardView>
                    <LinearLayout
                        android:background="@color/transparant"
                        android:padding="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/taxPayerCancel"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="12sp"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:drawablePadding="@dimen/dp_20"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:padding="15dp"
                            android:background="@drawable/button_withwhite_roundcoronor_color"
                            android:drawableStart="@drawable/addbusiness_cancelbuttonicon"
                            android:text="Cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/taxPayerSubmit"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="12sp"
                            android:layout_marginStart="@dimen/dp_20"
                            android:drawablePadding="@dimen/dp_20"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:padding="15dp"
                            android:textColor="@color/white"
                            android:background="@drawable/btn_bg_round_cornor_with_moreround_cornor"
                            android:drawableStart="@drawable/updateicon"
                            android:text="Update"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.core.widget.NestedScrollView>



    </LinearLayout>

</FrameLayout>