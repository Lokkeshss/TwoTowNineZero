<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dashboard.bottomnavigation.profile.ChangeLoginEmailFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/common_header_loginsignup" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/loginsignup_headerlogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/changeLoginEmailfragmentBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/fragmentbackarrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_weight="1"
            android:background="@color/loginheadercolor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/loginCardView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">
                    <TextView
                        android:id="@+id/test"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Add New Filing"
                        android:textColor="@color/black"
                        android:textSize="@dimen/page_topheading_textsize"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/blacklignt">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/irsPaymentOptionEFWMain"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="2dp"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/blacklignt">
                                <LinearLayout
                                    android:padding="@dimen/dp_10"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:gravity="center"
                                        android:layout_gravity="center"
                                        android:drawableStart="@drawable/changeloginmail"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textSize="@dimen/page_title_textsize"
                                        android:textColor="@color/textcolor"
                                        android:layout_marginTop="@dimen/dp_10"
                                        android:layout_marginBottom="@dimen/dp_10"
                                        android:text="Change Login Email"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>


                            <LinearLayout
                                android:visibility="visible"
                                android:id="@+id/irsPaymentOptionEFWChild"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_20"
                                    style="@style/loginTextInputLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Registered Email ID"
                                    app:hintTextColor="@color/lightGray">

                                    <EditText
                                        android:id="@+id/changeLoginEmailRegistered"
                                        android:textAllCaps="true"
                                        android:fontFamily="@font/roboto_regular"
                                        style="@style/loginTextInputEditText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textEmailAddress"
                                        android:text="" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_20"
                                    style="@style/loginTextInputLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="New Password"
                                    app:hintTextColor="@color/lightGray">

                                    <EditText
                                        android:id="@+id/changeLoginEmailNew"
                                        android:fontFamily="@font/roboto_regular"
                                        style="@style/loginTextInputEditText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textEmailAddress"
                                        android:maxLength="9"
                                        android:text="" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginTop="@dimen/dp_20"
                                    android:layout_marginBottom="@dimen/dp_20"
                                    style="@style/loginTextInputLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Confirm Password"
                                    app:hintTextColor="@color/lightGray">

                                    <EditText
                                        android:id="@+id/changeLoginEmailConfirm"
                                        android:fontFamily="@font/roboto_regular"
                                        style="@style/loginTextInputEditText"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textEmailAddress"
                                        android:maxLength="9"
                                        android:text="" />
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>


                        </LinearLayout>



                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:background="@color/transparant"
            android:padding="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/changeLoginEmailCancel"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/page_button_textsize"
                android:layout_marginEnd="@dimen/dp_20"
                android:drawablePadding="@dimen/dp_20"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="15dp"
                android:background="@drawable/button_withwhite_roundcoronor_color"
                android:drawableStart="@drawable/addbusiness_cancelbuttonicon"
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/changeLoginEmailSubmit"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/page_button_textsize"
                android:layout_marginStart="@dimen/dp_20"
                android:drawablePadding="@dimen/dp_20"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="15dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_bg_round_cornor_with_moreround_cornor"
                android:drawableStart="@drawable/updateicon"
                android:text="Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>

    </LinearLayout>

</FrameLayout>