<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dashboard.bottomnavigation.filling.isr_paymentoption.IRSPaymentSubmissionFeePaymentOptionFragment">


    <LinearLayout
        android:background="@color/loginheadercolor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <include layout="@layout/common_header_loginsignup" />

    <androidx.core.widget.NestedScrollView
        android:layout_weight="1"
        android:background="@color/loginheadercolor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/loginCardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">
    <TextView
        android:id="@+id/test"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Add New Filing"
        android:textColor="@color/black"
        android:textSize="@dimen/page_topheading_textsize"/>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/blacklignt">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/irsPaymentOptionEFWMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/blacklignt">
                <LinearLayout
                    android:padding="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="@dimen/page_title_textsize"
                        android:textColor="@color/textcolor"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="Submission fee payment option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <RadioGroup
                android:id="@+id/paymentOptionRG"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/paymentOptionCreditCardRB"
                    android:checked="true"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/page_title_textsize"
                    android:text="Credit Card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/paymentOptionBankAccountRB"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/page_title_textsize"
                    android:text="Bank Account (USA)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RadioGroup>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/creditCardView"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_20"
                    style="@style/loginTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Card Number"
                    app:hintTextColor="@color/lightGray">

                    <com.example.twotwoninezero.common.FormattedNumberEditText
                        android:textAllCaps="true"
                        android:id="@+id/paymentOptionCardNumber"
                        android:fontFamily="@font/roboto_regular"
                        style="@style/loginTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="01234 56789"
                        android:inputType="number"
                        android:maxLength="19"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/loginTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Expiration Date(MM/YY)"
                    app:hintTextColor="@color/lightGray">

                    <EditText
                        android:id="@+id/paymentOptionExp"
                        android:fontFamily="@font/roboto_regular"
                        style="@style/loginTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="5"
                        android:inputType="phone"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/loginTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Card Code (CVV)"
                    app:hintTextColor="@color/lightGray">

                    <EditText
                        android:id="@+id/paymentOptionCVV"
                        android:fontFamily="@font/roboto_regular"
                        style="@style/loginTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="1234567890"
                        android:inputType="numberPassword"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/bankAccountDetails"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_20"
                    style="@style/loginTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Bank Name"
                    app:hintTextColor="@color/lightGray">

                    <EditText
                        android:id="@+id/paymentOptionBankName"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto_regular"
                        style="@style/loginTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/loginTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name on account"
                    app:hintTextColor="@color/lightGray">

                    <EditText
                        android:id="@+id/paymentOptionNameOnAccount"
                        android:fontFamily="@font/roboto_regular"
                        style="@style/loginTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/loginTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Account Number"
                    app:hintTextColor="@color/lightGray">

                    <EditText
                        android:id="@+id/paymentOptionAccountNumber"
                        android:fontFamily="@font/roboto_regular"
                        style="@style/loginTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/loginTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Account Type"
                    app:hintTextColor="@color/lightGray">

                    <EditText
                        android:id="@+id/paymentOptionAccountType"
                        android:fontFamily="@font/roboto_regular"
                        style="@style/loginTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="1234567890-"
                        android:inputType="phone"
                        android:maxLength="9"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/loginTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ABA routing number"
                    app:hintTextColor="@color/lightGray">

                    <EditText
                        android:id="@+id/paymentOptionRoutingNumber"
                        android:fontFamily="@font/roboto_regular"
                        style="@style/loginTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="1234567890-"
                        android:inputType="phone"
                        android:maxLength="9"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <CheckBox
                android:id="@+id/paymentOptionBillingAddressChekBox"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/page_title_textsize"
                android:layout_marginTop="@dimen/dp_5"
                android:text="Have different billing address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/paymentOptionViewAddress"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="@dimen/dp_5"
                    android:text="Billing Address"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/page_title_textsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_20"
                    style="@style/loginTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    app:hintTextColor="@color/lightGray">

                    <EditText
                        android:id="@+id/paymentOptionFirstName"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto_regular"
                        style="@style/loginTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/loginTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    app:hintTextColor="@color/lightGray">

                    <EditText
                        android:id="@+id/paymentOptionLastName"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto_regular"
                        style="@style/loginTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/loginTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Billing Address"
                    app:hintTextColor="@color/lightGray">

                    <EditText
                        android:id="@+id/paymentOptionBillingAddress"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto_regular"
                        style="@style/loginTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/loginTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Country"
                    app:hintTextColor="@color/lightGray">

                    <EditText
                        android:id="@+id/paymentOptionCountry"
                        android:drawableEnd="@drawable/edittextdropdownicon"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto_regular"
                        style="@style/loginTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/loginTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="State"
                    app:hintTextColor="@color/lightGray">

                    <EditText
                        android:id="@+id/paymentOptionState"
                        android:drawableEnd="@drawable/edittextdropdownicon"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto_regular"
                        style="@style/loginTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/loginTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    app:hintTextColor="@color/lightGray">

                    <EditText
                        android:id="@+id/paymentOptionCity"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto_regular"
                        style="@style/loginTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/loginTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Zip Code"
                    app:hintTextColor="@color/lightGray">

                    <EditText
                        android:id="@+id/paymentOptionZipCode"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto_regular"
                        style="@style/loginTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:text="" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <TextView
                android:textSize="@dimen/page_title_textsize"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:drawablePadding="10dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:text="Disclaimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="@dimen/page_value_textsize"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_5"
                android:fontFamily="@font/roboto_regular"
                android:drawablePadding="10dp"
                android:textColor="@color/black"
                android:text="Your security is important to us.We do not store/share your credit card/Bank Account information anywhere in our  website/server. Your transactions will be securely handled by authorize.net payment gateway service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
    </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:background="@color/transparant"
            android:padding="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/paymentOptionPrevious"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/page_button_textsize"
                android:layout_marginEnd="20dp"
                android:drawablePadding="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="15dp"
                android:background="@drawable/button_withwhite_roundcoronor_color"
                android:drawableStart="@drawable/previousicon_blue"
                android:text="Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/paymentOptionSubmit"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/page_button_textsize"
                android:layout_marginStart="20dp"
                android:drawablePadding="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="15dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_bg_round_cornor_with_moreround_cornor"
                android:drawableEnd="@drawable/nexticonwhite"
                android:text="Pay "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
