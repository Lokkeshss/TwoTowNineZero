<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dashboard.bottomnavigation.filling.payment_and_irssubmition.PaymentandIRSsubmissionFragment">

    <LinearLayout
        android:background="@color/loginheadercolor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <include layout="@layout/common_header_loginsignup" />

    <androidx.core.widget.NestedScrollView
        android:layout_weight="1"
        android:background="@color/loginheadercolor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/loginCardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">
    <TextView
        android:id="@+id/test"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Add New Filing"
        android:textColor="@color/black"
        android:textSize="@dimen/page_topheading_textsize"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:layout_gravity="center"
            android:id="@+id/dutyCycleTimeLayout"
            layout="@layout/progress_bar_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            />
        <!--    app:progressMaxValue="@{analysis.getWeekDutyMax() + 0}"
                        app:progressValue="@{analysis.getWeekDutyTotal() + 0}"
                        app:progressText="@{util.spannedProgressTime(util.millisToHHmm(analysis.getWeekDutyTotal()),@string/weekHours)}" -->
        <TextView
            android:layout_marginStart="@dimen/dp_10"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Payment and IRS submission"
            android:textColor="@color/black"
            android:textSize="@dimen/page_maintitle_textsize"/>
    </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/irsPaymentOptionCreditCardMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/blacklignt">
            <LinearLayout
                android:padding="@dimen/dp_5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/page_title_textsize"
                    android:textColor="@color/black"
                    android:background="@drawable/textview_lightblue_roundcornor"
                    android:layout_marginTop="@dimen/dp_20"
                    android:padding="@dimen/dp_10"
                    android:text="Submission Fee Details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/sp_10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="end"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/page_title_textsize"
                        android:text="Filing Fee"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/irsPaymentOptionFilingFee"
                        android:gravity="end"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/page_value_textsize"
                        android:text="$ 6.95"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>            </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/sp_10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="end"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/page_title_textsize"
                        android:text="Payment Processing Fee"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/irsPaymentOptionProcessingFee"
                        android:gravity="end"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/page_value_textsize"
                        android:text="$ 6.95"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>            </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/sp_10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="end"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/page_title_textsize"
                        android:text="Sub Total"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/irsPaymentOptionSubTotal"
                        android:gravity="end"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/page_value_textsize"
                        android:text="$ 6.95"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/sp_10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="end"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/page_title_textsize"
                        android:text="Paid Amount"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/irsPaymentOptionPaidAmount"
                        android:gravity="end"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/page_value_textsize"
                        android:text="$ 6.95"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>            </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/sp_10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_20"
                        style="@style/loginTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter the coupon code"
                        app:hintTextColor="@color/lightGray">

                        <EditText
                            android:textAllCaps="true"
                            android:id="@+id/irsPaymentOptionCouponCode"
                            android:fontFamily="@font/roboto_regular"
                            style="@style/loginTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890. "
                            android:inputType="text"
                            android:text="" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/irsPaymentOptionApplyCouponButton"
                        android:layout_marginStart="@dimen/sp_10"
                        android:layout_weight="2"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/page_title_textsize"
                        android:textColor="@color/black"
                        android:background="@drawable/textview_lightblue_roundcornor"
                        android:layout_marginTop="@dimen/dp_20"
                        android:padding="@dimen/dp_10"
                        android:text="Apply Coupon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/sp_10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/irsPaymentOptionDiscountPercent"
                        android:gravity="end"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/page_title_textsize"
                        android:text="Discount Amount (0%)"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/irsPaymentOptionDiscountAmount"
                        android:gravity="end"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/page_value_textsize"
                        android:text="$ 6.95"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>            </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/sp_10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="end"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/page_title_textsize"
                        android:text="Net Amount "
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/irsPaymentOptionNetAmount"
                        android:gravity="end"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:textSize="@dimen/page_value_textsize"
                        android:text="$ 6.95"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>            </LinearLayout>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/irsPaymentOptionConsentDisclosure"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/dp_5"
            android:drawableStart="@drawable/eyeview"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/page_title_textsize"
            android:textColor="@color/black"
            android:background="@drawable/textview_lightblue_roundcornor"
            android:layout_marginTop="@dimen/dp_20"
            android:padding="@dimen/dp_10"
            android:text="Consent Disclosure Agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/irsPaymentOptionCheckBox"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/page_title_textsize"
            android:layout_marginTop="@dimen/sp_10"
            android:text="I agree to give my consent tp disclose the information on Form 2290 and Schedule 1/ Form 8849"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--irs_paymentdisclosure_layoutview   layout-->


    </LinearLayout>
    </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:background="@color/transparant"
            android:layout_marginBottom="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/irsPaymentOptionCancel"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/page_button_textsize"
                android:layout_marginEnd="20dp"
                android:drawablePadding="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="15dp"
                android:background="@drawable/button_withwhite_roundcoronor_color"
                android:drawableStart="@drawable/previousicon_blue"
                android:text="Previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/irsPaymentOptionSubmit"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/page_button_textsize"
                android:layout_marginStart="20dp"
                android:drawablePadding="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="15dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_bg_round_cornor_with_moreround_cornor"
                android:drawableEnd="@drawable/nexticonwhite"
                android:text="  Next  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>