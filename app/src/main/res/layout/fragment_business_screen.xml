<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@color/loginheadercolor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <include layout="@layout/common_header_loginsignup" />

    <androidx.core.widget.NestedScrollView
        android:background="@color/loginheadercolor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/loginCardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10">
        <TextView
            android:id="@+id/test"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:fontFamily="@font/roboto_bold"
            android:text="My Business"
            android:textColor="@color/black"
            android:textSize="@dimen/page_topheading_textsize"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginEnd="@dimen/dp_5"
                        android:id="@+id/tv_searchByEin"
                        style="@style/loginTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Search EIN"
                        app:hintTextColor="@color/lightGray"
                        app:layout_constraintTop_toBottomOf="@+id/textView">

                        <EditText
                            android:drawablePadding="@dimen/dp_10"
                            android:drawableStart="@drawable/businesssearchicon"
                            android:fontFamily="@font/roboto_regular"
                            android:id="@+id/edt_tv_searchByEin"
                            style="@style/loginTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@."
                            android:inputType="textEmailAddress"
                            android:text="" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginEnd="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_10"
                        android:id="@+id/tv_searchByBusinessName"
                        style="@style/loginTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Search Business Name"
                        app:hintTextColor="@color/lightGray"
                        app:layout_constraintTop_toBottomOf="@+id/textView">

                        <EditText
                            android:drawablePadding="@dimen/dp_10"
                            android:drawableStart="@drawable/businesssearchicon"
                            android:fontFamily="@font/roboto_regular"
                            android:id="@+id/edt_tv_searchByBusinessName"
                            style="@style/loginTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@."
                            android:inputType="textEmailAddress"
                            android:text="" />
                    </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:padding="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/searcheinbusiness"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/page_button_textsize"
                    android:layout_marginEnd="20dp"
                    android:drawablePadding="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_bg_round_cornor_with_moreround_cornor"
                    android:drawableStart="@drawable/buttonsearchicon"
                    android:text="Submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/addNewBusinessCancel"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/page_button_textsize"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:drawablePadding="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    android:background="@drawable/download_btn_bg_round_cornor_with_moreround_cornor"
                    android:drawableStart="@drawable/downloadicon"
                    android:text="Download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/addNewBusiness"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/businessscreen_roundborder_blue"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="@dimen/dp_10"
                        android:src="@drawable/addnewbusinessicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/addnewbusinesstextcolor"
                        android:textSize="@dimen/page_button_textsize"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="Add New Business"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activeORarchievBusinessList"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/businessscreen_roundborder_blue"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/archiveOrActiveIcon"
                        android:layout_marginTop="@dimen/dp_10"
                        android:src="@drawable/archievedbusinessicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/archiveOrActiveText"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/addnewbusinesstextcolor"
                        android:textSize="@dimen/page_button_textsize"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="Archieved Business"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>


            <com.google.android.material.card.MaterialCardView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/blacklignt">

                <LinearLayout
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tv_searchbyein"
                        style="@style/loginTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:hint="Search by EIN"
                        app:hintTextColor="@color/lightGray"
                        app:layout_constraintTop_toBottomOf="@+id/textView">

                        <EditText
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="14sp"
                            android:id="@+id/edt_searchbyein"
                            style="@style/loginTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@."
                            android:inputType="textEmailAddress"
                            android:text="" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tv_email"
                        style="@style/loginTextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:hint="Search by business name"
                        app:hintTextColor="@color/lightGray"
                        app:layout_constraintTop_toBottomOf="@+id/textView">

                        <EditText
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="14sp"
                            android:id="@+id/edt_email"
                            style="@style/loginTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@."
                            android:inputType="textEmailAddress"
                            android:text="" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:padding="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:id="@+id/login"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:drawableStart="@drawable/buttonsearchicon"
                        android:drawablePadding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/btn_bg_roundcornor"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Search"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.card.MaterialCardView
                    android:visibility="gone"
                    android:id="@+id/emptyBusinessList"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/black">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="40dp"
                            android:src="@drawable/emptysearchicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginBottom="20dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="13sp"
                            android:textColor="@color/next"
                            android:text="No business found!"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginBottom="30dp"
                            android:textAlignment="center"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="13sp"
                            android:textColor="@color/textcolor"
                            android:text="@string/mybusiness_no_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/myBusinessRV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
    </LinearLayout>


</FrameLayout>