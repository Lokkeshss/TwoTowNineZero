<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dashboard.bottomnavigation.filling.vehicles_tax.DownloadExcelFormateFragment">

    <LinearLayout
        android:background="@color/loginheadercolor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <include layout="@layout/common_header_loginsignup" />

    <ScrollView
        android:background="@color/loginheadercolor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/loginCardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">
    <TextView
        android:id="@+id/test"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Upload Taxable Vehicle"
        android:textColor="@color/black"
        android:textSize="@dimen/page_topheading_textsize"/>

        <TextView
            android:textSize="@dimen/page_maintitle_textsize"
            android:fontFamily="@font/roboto_bold"
            android:text="Note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:text="Download the excel template,fill in the vehicle information and save and upload the excel doc for processing"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/page_title_textsize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:text="If any changes in the Vehicle information,update and reupload the excel sheet.Your VIN list will be overwritten on the existing list "
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/page_title_textsize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/addNewBusinessCancel"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/page_button_textsize"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_10"
            android:drawablePadding="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="15dp"
            android:background="@drawable/download_btn_bg_round_cornor_with_moreround_cornor"
            android:drawableStart="@drawable/excelformate"
            android:text="Download Excel Template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <LinearLayout
            android:id="@+id/lowMileageVehicleUploadDocument"
            android:layout_marginTop="@dimen/dp_10"
            android:padding="@dimen/dp_20"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@drawable/uploadimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/page_title_textsize"
                android:textAlignment="center"
                android:text="Select an excel file to Upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_40"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lowMileageVehicleSubmit"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/page_button_textsize"
                android:layout_marginEnd="@dimen/dp_20"
                android:drawablePadding="@dimen/dp_20"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="15dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_bg_round_cornor_with_moreround_cornor"
                android:drawableStart="@drawable/uploaddocumentwhite"
                android:text="Upload "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/lowMileageVehicleCancel"
                android:fontFamily="@font/roboto_medium"
                android:textSize="@dimen/page_button_textsize"
                android:layout_marginStart="@dimen/dp_20"
                android:drawablePadding="@dimen/dp_20"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="15dp"
                android:background="@drawable/button_withwhite_roundcoronor_color"
                android:drawableStart="@drawable/addbusiness_cancelbuttonicon"
                android:text="Cancel"
                android:textColor="@color/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
    </ScrollView>
    </LinearLayout>
</FrameLayout>