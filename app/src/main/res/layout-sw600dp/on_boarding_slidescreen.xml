<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/onBoardLogo"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/onboard_one" />
        <TextView
            android:id="@+id/obBoardTitle"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/on_boardingtextcolor"
            android:textAllCaps="true"
            android:text="convienent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/onBoardDes"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/onboard_left"
            android:layout_marginEnd="@dimen/onboard_right"
            android:layout_gravity="center"
            android:lineSpacingExtra="2sp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="E-File Form 2290 and pay your Heavy Vehicle Truck Tax today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
      <ImageView
            android:id="@+id/onBoardIndicater"
          android:layout_marginTop="50dp"
          android:src="@drawable/dot_one"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/onBoardGetStart"
            android:layout_marginTop="30dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/btn_bg_round_cornor_with_moreround_cornor"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="Get Started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/onBoardSkip"
            android:drawablePadding="5dp"
            android:drawableEnd="@drawable/skipicon"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/skip"
            android:text="Skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/onBoardNext"
            android:drawablePadding="5dp"
            android:drawableEnd="@drawable/nexticon"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/next"
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>